{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "MedBill default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "sql:default",
    "sql:allow-load",
    "sql:allow-execute",
    "sql:allow-select",
    "sql:allow-close",
    "fs:default",
    "fs:allow-read-text-file",
    "fs:allow-write-text-file",
    "fs:allow-read-file",
    "fs:allow-write-file",
    "fs:allow-exists",
    "fs:allow-mkdir",
    "fs:allow-remove",
    "fs:allow-rename",
    "fs:allow-copy-file",
    "fs:allow-stat",
    "fs:allow-read-dir",
    {
      "identifier": "fs:scope",
      "allow": [
        "$APPDATA/*",
        "$APPDATA/**",
        "$HOME/*",
        "$HOME/**",
        "$DOWNLOAD/*",
        "$DOWNLOAD/**",
        "$DOCUMENT/*",
        "$DOCUMENT/**",
        "$DESKTOP/*",
        "$DESKTOP/**",
        "**/*"
      ]
    },
    "dialog:default",
    "dialog:allow-open",
    "dialog:allow-save",
    "dialog:allow-message",
    "dialog:allow-ask",
    "dialog:allow-confirm",
    "shell:default",
    "shell:allow-open"
  ]
}